{
  "index_patterns": ["kong-api-logs-*"],
  "template": {
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1,
      "index.refresh_interval": "5s",
      "index.mapping.total_fields.limit": 2000,
      "index.lifecycle.name": "kong-logs-policy",
      "index.lifecycle.rollover_alias": "kong-api-logs",
      "index.max_result_window": 10000,
      "index.query.default_field": [
        "service_name",
        "route_name",
        "http_method",
        "user_agent",
        "client_address"
      ],
      "analysis": {
        "analyzer": {
          "url_analyzer": {
            "tokenizer": "uax_url_email",
            "filter": ["lowercase"]
          }
        }
      }
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "started_at": {
          "type": "date"
        },
        "processed_at": {
          "type": "date"
        },
        "http_method": {
          "type": "keyword"
        },
        "http_status": {
          "type": "integer"
        },
        "response_category": {
          "type": "keyword"
        },
        "total_latency": {
          "type": "integer"
        },
        "proxy_latency": {
          "type": "integer"
        },
        "kong_latency": {
          "type": "integer"
        },
        "service_name": {
          "type": "keyword"
        },
        "route_name": {
          "type": "keyword"
        },
        "client_address": {
          "type": "ip"
        },
        "user_agent": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "request_size": {
          "type": "integer"
        },
        "response_size": {
          "type": "integer"
        },
        "request": {
          "properties": {
            "method": {
              "type": "keyword"
            },
            "uri": {
              "type": "keyword"
            },
            "url": {
              "type": "keyword"
            },
            "size": {
              "type": "integer"
            },
            "querystring": {
              "type": "object",
              "enabled": false
            },
            "headers": {
              "type": "object",
              "enabled": false
            }
          }
        },
        "response": {
          "properties": {
            "status": {
              "type": "integer"
            },
            "size": {
              "type": "integer"
            },
            "headers": {
              "type": "object",
              "enabled": false
            }
          }
        },
        "service": {
          "properties": {
            "id": {
              "type": "keyword"
            },
            "name": {
              "type": "keyword"
            }
          }
        },
        "route": {
          "properties": {
            "id": {
              "type": "keyword"
            },
            "name": {
              "type": "keyword"
            }
          }
        },
        "consumer": {
          "properties": {
            "id": {
              "type": "keyword"
            },
            "username": {
              "type": "keyword"
            }
          }
        },
        "latencies": {
          "properties": {
            "request": {
              "type": "integer"
            },
            "kong": {
              "type": "integer"
            },
            "proxy": {
              "type": "integer"
            }
          }
        },
        "geoip": {
          "properties": {
            "city_name": {
              "type": "keyword"
            },
            "country_name": {
              "type": "keyword"
            },
            "country_code2": {
              "type": "keyword"
            },
            "region_name": {
              "type": "keyword"
            },
            "location": {
              "type": "geo_point"
            },
            "timezone": {
              "type": "keyword"
            }
          }
        },
        "user_agent_parsed": {
          "properties": {
            "name": {
              "type": "keyword"
            },
            "version": {
              "type": "keyword"
            },
            "os": {
              "type": "keyword"
            },
            "os_name": {
              "type": "keyword"
            },
            "device": {
              "type": "keyword"
            }
          }
        },
        "latency_category": {
          "type": "keyword"
        },
        "performance_score": {
          "type": "integer"
        },
        "sla_available": {
          "type": "boolean"
        },
        "sla_performance": {
          "type": "boolean"
        },
        "sla_met": {
          "type": "boolean"
        }
      }
    }
  }
}
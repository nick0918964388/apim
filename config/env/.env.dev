# Kong Configuration
KONG_DATABASE=postgres
KONG_PG_HOST=kong-database-master
KONG_PG_PORT=5432
KONG_PG_USER=kong
KONG_PG_PASSWORD=kong
KONG_PG_DATABASE=kong
KONG_PG_RO_HOST=kong-database-slave
KONG_PG_RO_PORT=5432

# Kong Ports
KONG_PROXY_ACCESS_LOG=/dev/stdout
KONG_ADMIN_ACCESS_LOG=/dev/stdout
KONG_PROXY_ERROR_LOG=/dev/stderr
KONG_ADMIN_ERROR_LOG=/dev/stderr
KONG_ADMIN_LISTEN=0.0.0.0:8001
KONG_LOG_LEVEL=info


# PostgreSQL Master Configuration
POSTGRES_DB=kong
POSTGRES_USER=kong
POSTGRES_PASSWORD=kong
POSTGRES_REPLICATION_USER=replicator
POSTGRES_REPLICATION_PASSWORD=replicator_password

# PostgreSQL Slave Configuration
PGUSER=kong
PGPASSWORD=kong
PGPASSWORD_REPLICATION=replicator_password

# ELK Stack Configuration
ES_JAVA_OPTS=-Xms512m -Xmx512m
ELASTIC_PASSWORD=changeme
KIBANA_SYSTEM_PASSWORD=changeme

# Backup Configuration
BACKUP_RETENTION_DAYS=30
INCREMENTAL_RETENTION_DAYS=7
WAL_RETENTION_DAYS=14

# Host Storage Paths
APIM_DATA_PATH=/srv/apim/database
POSTGRES_MASTER_DATA=/srv/apim/database/master
POSTGRES_SLAVE_DATA=/srv/apim/database/slave
BACKUP_PATH=/srv/apim/database/backups
ELK_DATA_PATH=/srv/apim/elk

# Network Configuration
COMPOSE_PROJECT_NAME=kong-apim
DOCKER_NETWORK=kong-net